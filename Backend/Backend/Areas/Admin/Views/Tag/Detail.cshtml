@model TagDetailVM

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <table class="table table-bordered" style="table-layout: fixed; box-sizing: border-box; overflow: hidden;">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Blogs
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.Raw(Model.Name)
                    </td>
                    <td>
                        @foreach (var blog in Model.Blogs)
                        {
                            <p>@blog.Blog.Name</p>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <a class="btn btn-danger my-3" style="color: white;" asp-action="Index">Back</a>
</div>
