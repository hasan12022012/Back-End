@model ProductDetailVM

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">

        <table class="table table-bordered" style="table-layout: fixed; box-sizing: border-box; overflow: hidden;">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Genre
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img style="border-radius: 5px; width: 150px; height: 200px;" src="~/assets/img/@Model.Images.FirstOrDefault(m => m.IsMain).Name" alt="product">
                    </td>
                    <td>
                        @Html.Raw(Model.Name)
                    </td>
                    <td>
                        <h6 style="width: 50px !important; word-wrap: break-word;">
                            @Html.Raw(Model.Description)
                        </h6>
                    </td>
                    <td>
                        @Html.Raw(Model.Price)$
                    </td>
                    <td style="display: flex; gap: 10px; padding-top: 100px; justify-content: center">
                        @foreach (var genre in Model.Genres)
                        {
                            <p>@genre.Genre.Name</p>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
