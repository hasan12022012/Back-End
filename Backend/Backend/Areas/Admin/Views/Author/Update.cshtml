@model AuthorUpdateVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mx-5 my-3">
    <h3>Author - Update</h3>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div>
            <label class="my-3" asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name">
            <span class="text-danger my-1" asp-validation-for="Name"></span>
        </div>

        <div>
            <label class="my-3" asp-for="About">About</label>
            <input class="form-control" asp-for="About">
            <span class="text-danger my-1" asp-validation-for="About"></span>
        </div>

        <div>
            <label class="my-3" asp-for="ProductIds">
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                    <div style="display: inline-block; margin-left: 20px;">
                        <p>@Model.Products[i].Name</p>
                        <a class="btn btn-danger my-3 dlt" style="color: white; margin: 0 !important;" book-id="@Model.Products[i].Id">Delete</a>
                    </div>
                }
            </label>
            <select class="form-control" asp-for="ProductIds" asp-items="@ViewBag.Products"></select>
        </div>
        <a class="btn btn-danger my-3" style="color: white;" asp-controller="Author" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary my-3" style="color: white;">Update</button>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/admin/js/custom.js"></script>

