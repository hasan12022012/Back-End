@model BannerListVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img style="border-radius: 5px; width: 150px; height: 200px;" src="~/assets/img/@Model.Image" alt="product">
                    </td>
                    <td style="display: flex; gap: 10px; padding-top: 100px; justify-content: center">
                        <a asp-action="Update" asp-route-id="@Model.Id" style="color: white;"><button type="button" class="btn btn-primary">Update</button></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>