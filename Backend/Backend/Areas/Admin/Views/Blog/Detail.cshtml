@model BlogDetailVM

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <table class="table table-bordered" style="table-layout: fixed; box-sizing: border-box; overflow: hidden;">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Tags
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img style="border-radius: 5px; width: 150px; height: 200px;" src="~/assets/img/@Model.Image" alt="product">
                    </td>
                    <td>
                        @Html.Raw(Model.Name)
                    </td>
                    <td>
                        @Html.Raw(Model.Description)
                    </td>
                    <td>
                        @Html.Raw(Model.Category)
                    </td>
                    <td>
                        @foreach (var tag in Model.Tags)
                        {
                            <p>@tag.Tag.Name</p>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <a class="btn btn-danger my-3" style="color: white;" asp-action="Index">Back</a>
</div>
