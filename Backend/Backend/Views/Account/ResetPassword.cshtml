@model ResetPasswordVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
    <link rel="stylesheet" href="~/assets/css/login.css" />
    <title>Login</title>
</head>
<body>
    <section class="login">
        <div class="container">
            <div class="window" style="height: auto;">
                <div class="loginhead">
                    <span>New Password</span>
                    <p>Enter New Password to get access</p>
                </div>
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="All" style="color: red;"></div>

                    <label asp-for="Password">New Password</label>
                    <input asp-for="Password" placeholder="New Password" id="id_password" />
                    <i class="far fa-eye"
                       id="togglePassword"
                       style="margin-left: -30px; top: 45px; cursor: pointer"></i>

                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />

                    <div class="loginfoot" style="margin-top: 0;">
                        <button>Confirm</button>
                    </div>
                    <input asp-for="Token" value="@Model.Token" type="hidden" />
                    <input asp-for="UserId" value="@Model.UserId" type="hidden" />
                </form>
            </div>
        </div>
    </section>

    <script src="~/assets/js/login.js"></script>
</body>
</html>
