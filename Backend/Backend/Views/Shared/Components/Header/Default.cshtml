@model HeaderVM

<div class="container">
    <div class="head-content">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/@Model.Settings?["Logo"]" alt=""></a>
        </div>
        <div class="nav-content">
            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Product" asp-action="Index">Shop</a></li>
                    <li><a asp-controller="About" asp-action="Index">About</a></li>
                    <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
            </nav>
        </div>
        <div class="list">
            <ul>
                <li class="sup">
                    <a asp-controller="Basket" asp-action="Index">
                        <img src="~/assets/img/cart.svg" alt="">
                        <sup>0</sup>
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="Login">
                        <button class="signinbtn">
                            <h1>Sign in</h1>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
    </div>

</div>