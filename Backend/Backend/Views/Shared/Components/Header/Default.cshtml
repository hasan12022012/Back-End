@model HeaderVM

<div class="container">
    <div class="head-content">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/@Model.Settings?["Logo"]" alt=""></a>
        </div>
        <div class="nav-content">
            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Product" asp-action="Index">Shop</a></li>
                    <li><a asp-controller="About" asp-action="Index">About</a></li>
                    <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                </ul>
            </nav>
        </div>
        <div class="list">
            <ul>
                <li class="sup">
                    <a asp-controller="Basket" asp-action="Index">
                        <img src="~/assets/img/cart.svg" alt="">
                        <sup id="basketCount">@Model.Count</sup>
                        <sup style="display: none;" id="basketCount2">@Model.Count</sup>
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {

                    <li>
                        <h5>@User.Identity.Name</h5>
                    </li>

                    <li>
                        <a asp-controller="Account" asp-action="ChangePassword">
                            <button class="signinbtn">
                                <h1>Change password</h1>
                            </button>
                        </a>
                    </li>

                    <li>
                        <a asp-controller="Account" asp-action="Logout">
                            <button class="signinbtn">
                                <h1>Sign out</h1>
                            </button>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="Login">
                            <button class="signinbtn">
                                <h1>Sign in</h1>
                            </button>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

</div>