@model BasketIndexVM

@{
    ViewData["Title"] = "Index";

    double endTotal = 0;
}

@section Links{
    <link rel="stylesheet" href="~/assets/css/cart.css">
}

<section class="slider-area">
    <div class="container">
        <div class="cartsection">
            <h2>Cart</h2>
        </div>
    </div>
</section>

<section class="cart-section-area">
    <div class="container">
        <div class="title-of-product">
            <div class="product">
                <h4>Product</h4>
            </div>
            <div class="price-quantity-total">
                <h4>Price</h4>
                <h4>Quantity</h4>
                <h4>Total</h4>
                <h4>Setting</h4>
            </div>
        </div>
        @foreach (var item in Model.BasketProducts)
        {
            <div class="about-of-product" id="@item.Id">
                <div class="img-of-product">
                    <img src="~/assets/img/@item.Image" alt="">
                    <h3>@item.Name</h3>
                </div>
                <div class="price-of-product">
                    <h4>$@item.Price</h4>
                    <div class="quantity-product" style="text-align:center;">
                        <p>@item.Quantity</p>
                    </div>
                    <h4>$@item.Total</h4>
                    <i data-id="@item.Id" data-quantity="@item.Quantity" class="fa-solid fa-trash" id="delete" style="color: red; font-size: 25px; margin-left: 20px; cursor: pointer;"></i>
                </div>
            </div>
            endTotal += item.Total;
        }
        <div class="subtotal">
            <h5 class="subtotal-price">Subtotal</h5>
            <h5>$@endTotal</h5>
        </div>
        <div class="continue">
            <a asp-controller="Product" asp-action="Index" class="continue-shopping">
                <button class="continue-shopping-btn">
                    <h1>Continue Shopping</h1>
                </button>
            </a>
        </div>
    </div>
</section>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.4.30/sweetalert2.all.min.js"></script>
    <script src="~/assets/js/cart.js"></script>
    <script src="~/assets/js/bookdetails.js"></script>

}
